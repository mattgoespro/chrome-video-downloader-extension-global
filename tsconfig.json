{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "esModuleInterop": true,
    "allowJs": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["es2017", "dom", "dom.iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "runtime/*": ["src/runtime/*"],
      "shared/*": ["src/shared/*"],
      "theme": ["./src/shared/theme/theme.ts"],
      "typography": ["./src/shared/theme/typography.ts"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es6",
    "types": ["node", "chrome"],
    "useDefineForClassFields": true
  },
  "include": ["src", "webpack.dev.ts"]
}
